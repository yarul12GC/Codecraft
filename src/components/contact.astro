---
interface Props {
  listfor: { label: string; name: string }[];
}

const { listfor } = Astro.props;
---

<div class="contenedorformulario">
  <h1 class="text-2xl font-bold text-center mb-4">
    <span class="text-blue-500"> Descripción de su situación </span>
  </h1>

  <form action="" class="formulario">
    {
      listfor.map((field) => (
        <div class="datoscontact">
          <label class="description" for={field.name}>
            {field.label}
          </label>
          <input
            class="contenedorinfo"
            type="text"
            id={field.name}
            name={field.name}
          />
        </div>
      ))
    }
    <button
      class="bg-blue-500 text-white font-semibold py-2 px-4 rounded shadow hover:bg-blue-600 transition duration-300"
      type="submit"
    >
      ENVIAR
    </button>
  </form>
</div>

<style>
  .datoscontact {
    margin-bottom: 1rem;
    justify-content: center;
    display: block;
  }
  .description {
    display: block;
    margin: 10px;
  }
  .tituloform {
    color: blue;
  }
  .contenedorformulario {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    padding: 2rem;
    border: 2px solid rgb(255, 255, 255);
    box-shadow: 0 8px 30px rgba(255, 255, 255, 0.6);
    max-width: 600px;
    margin: 0 auto;
    height: auto;
  }
  .contenedorinfo {
    color: black;
  }
</style>
